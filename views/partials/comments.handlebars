<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="card">
      <h5 class="card-header"></h5>
      <div class="card-body dark-border">
        <div class="mb-3">
          <p>{{comment_text}}</p>
        </div>
        <div class="mb-3">
          <p>-{{user.username}}, {{format_date created_at}}</p>
        </div>
      </div>
    </div>
  </section>
  {{/each}}
</div>