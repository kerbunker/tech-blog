<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <header class="dark-color">
      <div class="container">
        <nav class="navbar">
          <ul class="nav">
            <li class="nav-item">
              <a class="nav-link dark-color" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link dark-color" href="/dashboard">Dashboard</a>
            </li>
            {{#if loggedIn}}
              <li class="nav-item">
                <button id="logout" class="nav-link dark-color">Logout</button>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            {{/if}}
          </ul>
        </nav>
        <h1 class="title rounded-pill">
          <a href="/">Tech Blog</a>
        </h1>
      </div>
    </header>
    <main class="light-background">
      <div class="container light-background">
        {{{body}}}
      </div>
    </main>
    <footer class="dark-color">
      <div class="container">
        <p class="light-color">Thanks for visiting!</p>
      </div>
    </footer>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>